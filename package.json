{
  "name": "@egytech.fyi/website",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.2.0",
  "description": "Explore the latest trends in the Egyptian tech market, analyze salaries, and get personalized negotiation strategies based on your CV.",
  "homepage": "https://egytech.fyi",
  "repository": "github.com:egytech-fyi/egytech-fyi",
  "engines": {
    "node": ">=20.12.2",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && pnpm simple-git-hooks",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier . --check --cache",
    "format:fix": "pnpm format --write"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.20.0",
    "@iconify-json/ph": "^1.1.13",
    "@nuxt/eslint": "^0.3.13",
    "@nuxt/fonts": "^0.7.0",
    "@nuxtjs/seo": "2.0.0-rc.10",
    "apexcharts": "^3.49.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.17.3",
    "lint-staged": "^15.2.5",
    "nuxt": "^3.11.2",
    "prettier": "^3.3.1",
    "shadcn-docs-nuxt": "^0.1.3",
    "shadcn-nuxt": "^0.10.4",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "vue3-apexcharts": "^1.5.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "pnpm lint:fix",
      "pnpm format:fix"
    ]
  }
}
